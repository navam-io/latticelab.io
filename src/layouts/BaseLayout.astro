---
/**
 * Base Layout
 *
 * Root layout with all HTML boilerplate, favicon, and SEO meta tags.
 * All pages should use this layout (usually via PageLayout).
 *
 * Feature Slice 23: SEO & Meta Tags
 */
import '@/styles/globals.css';
import SEO from '@/components/SEO.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article' | 'product';
  noindex?: boolean;
  structuredData?: object;
}

const { title, description, image, type, noindex, structuredData } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#1a1a1a" />

    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      noindex={noindex}
      structuredData={structuredData}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
