---
/**
 * Sources Preview Demo Page
 *
 * Development page to showcase and test the SourcesPreview component.
 * This page is used for testing and demonstration purposes.
 *
 * Feature Slice 26: Sources Preview Component
 */
import PageLayout from '@/layouts/PageLayout.astro';
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';
import { SourcesPreview } from '@/components/previews/SourcesPreview';
---

<PageLayout
  title="Sources Preview Demo"
  description="Interactive demo of the Lattice Sources panel"
  noindex={true}
>
  <Section spacing="lg" background="default">
    <Container size="lg">
      <div class="mx-auto max-w-4xl">
        <h1 class="mb-4 text-3xl font-bold text-foreground" data-testid="sources-preview-demo-title">
          Sources Preview Demo
        </h1>
        <p class="mb-8 text-muted-foreground">
          Interactive demo simulating the Lattice Sources panel with file upload dropzone,
          source cards, metadata display, and search/filter functionality.
        </p>

        <div class="mb-8">
          <SourcesPreview client:load />
        </div>

        <div class="rounded-lg border border-border bg-surface-2 p-6">
          <h2 class="mb-4 text-xl font-semibold text-foreground">Demo Features</h2>
          <ul class="space-y-2 text-sm text-muted-foreground">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              File upload dropzone with drag & drop
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Simulated upload progress animation
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Source cards with type icons (PDF, URL, API)
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Metadata display (page count, vendor, date)
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Search/filter with live results
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Hover states with view/remove actions
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Footer with source type counts
            </li>
          </ul>
        </div>
      </div>
    </Container>
  </Section>
</PageLayout>
