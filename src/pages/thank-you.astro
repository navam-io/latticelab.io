---
/**
 * Thank You Page
 *
 * Post-purchase confirmation page shown after successful Stripe payment.
 * Provides clear next steps for accessing the product.
 *
 * Feature Slice 15: Thank You Page
 */
import PageLayout from '@/layouts/PageLayout.astro';
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';
import Card from '@/components/ui/Card.astro';
import Button from '@/components/ui/Button.astro';

// Next steps after purchase
const nextSteps = [
  {
    step: 1,
    title: 'Check Your Email',
    description: 'We\'ve sent a confirmation email to your inbox with your purchase receipt and setup instructions.',
    icon: 'mail',
    timeline: 'Immediately',
  },
  {
    step: 2,
    title: 'Accept GitHub Invitation',
    description: 'Within 24 hours, you\'ll receive an invitation to our private GitHub repository. Check your email and accept the invite.',
    icon: 'github',
    timeline: 'Within 24 hours',
  },
  {
    step: 3,
    title: 'Clone the Repository',
    description: 'Once you have access, clone the repository to your local machine using git clone.',
    icon: 'download',
    timeline: 'After invite accepted',
  },
  {
    step: 4,
    title: 'Run Lattice',
    description: 'Follow our Quick Start guide to run Lattice locally. It takes less than 5 minutes with Docker.',
    icon: 'play',
    timeline: '5 minutes setup',
  },
];

// What to expect items
const expectations = [
  {
    icon: 'clock',
    title: 'GitHub Access Timeline',
    description: 'Repository access is typically granted within a few hours during business hours (PST). Maximum wait time is 24 hours.',
  },
  {
    icon: 'mail-check',
    title: 'Check Spam Folder',
    description: 'If you don\'t see our emails, please check your spam or promotions folder. Add hello@latticelab.io to your contacts.',
  },
  {
    icon: 'help-circle',
    title: 'Need Help?',
    description: 'If you haven\'t received access within 24 hours, or have any questions, contact us and we\'ll sort it out immediately.',
  },
];
---

<PageLayout
  title="Thank You - Lattice Lab"
  description="Thank you for purchasing Lattice Lab. Check your email for next steps to access your private GitHub repository."
>
  <!-- Hero / Confirmation Section -->
  <Section spacing="lg" background="default" data-testid="thank-you-hero">
    <Container size="lg">
      <div class="mx-auto max-w-3xl text-center">
        <!-- Success Icon -->
        <div class="mx-auto mb-6 flex h-20 w-20 items-center justify-center rounded-full bg-success/10" data-testid="thank-you-icon">
          <svg
            class="h-10 w-10 text-success"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"
            />
          </svg>
        </div>

        <h1
          class="mb-4 text-4xl font-bold tracking-tight text-foreground sm:text-5xl"
          data-testid="thank-you-headline"
        >
          Thank You for Your Purchase!
        </h1>
        <p class="text-xl text-muted-foreground" data-testid="thank-you-subhead">
          You now have lifetime access to Lattice Lab. Follow the steps below to get started.
        </p>

        <!-- Order confirmation note -->
        <div class="mt-8 inline-flex items-center gap-2 rounded-full bg-surface-2 px-4 py-2 text-sm text-muted-foreground" data-testid="thank-you-confirmation">
          <svg class="h-4 w-4 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>A confirmation email has been sent to your inbox</span>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Next Steps Section -->
  <Section spacing="lg" background="muted" data-testid="thank-you-steps">
    <Container size="lg">
      <div class="mx-auto max-w-3xl">
        <h2
          class="mb-8 text-center text-2xl font-bold tracking-tight text-foreground sm:text-3xl"
          data-testid="thank-you-steps-headline"
        >
          What Happens Next
        </h2>

        <div class="space-y-6" data-testid="thank-you-steps-list">
          {
            nextSteps.map((item, index) => (
              <Card padding="md" class="relative" data-testid={`thank-you-step-${index}`}>
                <div class="flex gap-4">
                  {/* Step number */}
                  <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-accent text-lg font-bold text-accent-foreground" data-testid={`thank-you-step-${index}-number`}>
                    {item.step}
                  </div>

                  <div class="flex-1">
                    <div class="flex flex-wrap items-center gap-2 mb-1">
                      <h3 class="font-semibold text-foreground" data-testid={`thank-you-step-${index}-title`}>
                        {item.title}
                      </h3>
                      <span class="rounded-full bg-surface-3 px-2 py-0.5 text-xs text-muted-foreground" data-testid={`thank-you-step-${index}-timeline`}>
                        {item.timeline}
                      </span>
                    </div>
                    <p class="text-sm text-muted-foreground" data-testid={`thank-you-step-${index}-desc`}>
                      {item.description}
                    </p>
                  </div>

                  {/* Icon */}
                  <div class="hidden sm:flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-surface-3">
                    <svg
                      class="h-5 w-5 text-muted-foreground"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      {item.icon === 'mail' && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      )}
                      {item.icon === 'github' && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 00-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0020 4.77 5.07 5.07 0 0019.91 1S18.73.65 16 2.48a13.38 13.38 0 00-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 005 4.77a5.44 5.44 0 00-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 009 18.13V22" />
                      )}
                      {item.icon === 'download' && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                      )}
                      {item.icon === 'play' && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                      )}
                      {item.icon === 'play' && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      )}
                    </svg>
                  </div>
                </div>
              </Card>
            ))
          }
        </div>
      </div>
    </Container>
  </Section>

  <!-- Timeline & Expectations Section -->
  <Section spacing="lg" background="default" data-testid="thank-you-expectations">
    <Container size="lg">
      <div class="mx-auto max-w-4xl">
        <h2
          class="mb-8 text-center text-2xl font-bold tracking-tight text-foreground sm:text-3xl"
          data-testid="thank-you-expectations-headline"
        >
          What to Expect
        </h2>

        <div class="grid gap-6 sm:grid-cols-3" data-testid="thank-you-expectations-grid">
          {
            expectations.map((item, index) => (
              <div
                class="text-center p-6 rounded-lg bg-surface-2 border border-border"
                data-testid={`thank-you-expectation-${index}`}
              >
                <div class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-accent/10">
                  <svg
                    class="h-6 w-6 text-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    {item.icon === 'clock' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    )}
                    {item.icon === 'mail-check' && (
                      <>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </>
                    )}
                    {item.icon === 'help-circle' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    )}
                  </svg>
                </div>
                <h3 class="mb-2 font-semibold text-foreground" data-testid={`thank-you-expectation-${index}-title`}>
                  {item.title}
                </h3>
                <p class="text-sm text-muted-foreground" data-testid={`thank-you-expectation-${index}-desc`}>
                  {item.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </Container>
  </Section>

  <!-- Support & Documentation Section -->
  <Section spacing="lg" background="muted" data-testid="thank-you-support">
    <Container size="lg">
      <div class="mx-auto max-w-2xl text-center">
        <h2
          class="mb-4 text-2xl font-bold tracking-tight text-foreground sm:text-3xl"
          data-testid="thank-you-support-headline"
        >
          Need Help Getting Started?
        </h2>
        <p class="mb-8 text-muted-foreground" data-testid="thank-you-support-subhead">
          We're here to help you get up and running quickly.
        </p>

        <div class="flex flex-col items-center gap-4 sm:flex-row sm:justify-center" data-testid="thank-you-support-buttons">
          <Button
            variant="primary"
            size="lg"
            href="mailto:hello@latticelab.io"
            class="px-8"
            data-testid="thank-you-contact-btn"
          >
            Contact Support
          </Button>
          <Button
            variant="secondary"
            size="lg"
            href="/"
            class="px-8"
            data-testid="thank-you-home-btn"
          >
            Return to Homepage
          </Button>
        </div>

        <!-- Additional info -->
        <div class="mt-10 rounded-lg border border-border bg-surface-1 p-6" data-testid="thank-you-support-info">
          <h3 class="mb-3 font-semibold text-foreground" data-testid="thank-you-support-info-title">
            Quick Start Resources
          </h3>
          <ul class="space-y-2 text-sm text-muted-foreground text-left" data-testid="thank-you-support-info-list">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Documentation is included in the GitHub repository README</span>
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Docker is the recommended deployment method (docker-compose up)</span>
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-success flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Email <a href="mailto:hello@latticelab.io" class="text-accent hover:underline">hello@latticelab.io</a> for any access issues</span>
            </li>
          </ul>
        </div>

        <!-- Support contact -->
        <p class="mt-8 text-sm text-muted-foreground" data-testid="thank-you-email">
          Questions? Email us at{' '}
          <a
            href="mailto:hello@latticelab.io"
            class="font-medium text-accent underline underline-offset-4 hover:text-accent/80"
            data-testid="thank-you-email-link"
          >
            hello@latticelab.io
          </a>
        </p>
      </div>
    </Container>
  </Section>
</PageLayout>
