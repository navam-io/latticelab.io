---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.vue';
import Pricing from '@components/home/Pricing.vue';
import FAQ from '@components/home/FAQ.vue';
import NewsletterSection from '@components/NewsletterSection.vue';
import Footer from '@components/Footer.vue';
---

<Layout
  title="Pricing - Lattice"
  description="Get lifetime access to Lattice for $99. One-time payment, no subscriptions. All features included plus future updates."
  keywords="Lattice pricing, AI research tool pricing, lifetime access, one-time payment"
>
  <Header client:load />

  <main>
    <div class="py-12 bg-gradient-to-br from-violet-50 to-blue-50">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          Simple Pricing
        </h1>
        <p class="text-xl text-gray-600">
          One-time purchase. Lifetime access. All features included.
        </p>
      </div>
    </div>

    <Pricing client:load />
    <FAQ client:load />
    <NewsletterSection client:load />
  </main>

  <Footer client:load />
</Layout>
