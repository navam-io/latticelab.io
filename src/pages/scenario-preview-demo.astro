---
/**
 * Scenario Preview Demo Page
 *
 * Development page to showcase and test the ScenarioPreview component.
 * This page is used for testing and demonstration purposes.
 *
 * Feature Slice 28: Scenario Preview Component
 */
import PageLayout from '@/layouts/PageLayout.astro';
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';
import { ScenarioPreview } from '@/components/previews/ScenarioPreview';
---

<PageLayout
  title="Scenario Preview Demo"
  description="Interactive demo of the Lattice Scenario Configuration"
  noindex={true}
>
  <Section spacing="lg" background="default">
    <Container size="lg">
      <div class="mx-auto max-w-4xl">
        <h1 class="mb-4 text-3xl font-bold text-foreground" data-testid="scenario-preview-demo-title">
          Scenario Preview Demo
        </h1>
        <p class="mb-8 text-muted-foreground">
          Interactive demo simulating the Lattice Scenario Configuration with workload type selection,
          latency/throughput controls, budget input, and AI stack recommendations.
        </p>

        <div class="mb-8">
          <ScenarioPreview client:load />
        </div>

        <div class="rounded-lg border border-border bg-surface-2 p-6">
          <h2 class="mb-4 text-xl font-semibold text-foreground">Demo Features</h2>
          <ul class="space-y-2 text-sm text-muted-foreground">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Workload type dropdown (Chat, RAG, Agentic, Batch)
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Latency slider with P50/P95/P99 toggle
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Monthly throughput slider
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Budget input field with currency formatting
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Get Recommendations button with loading spinner
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Stack recommendation cards with match scores
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Best Match indicator for top recommendation
            </li>
          </ul>
        </div>
      </div>
    </Container>
  </Section>
</PageLayout>
