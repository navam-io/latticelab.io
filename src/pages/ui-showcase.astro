---
import PageLayout from '@/layouts/PageLayout.astro';
import Button from '@/components/ui/Button.astro';
import Card from '@/components/ui/Card.astro';
import Badge from '@/components/ui/Badge.astro';
import Container from '@/components/ui/Container.astro';
import Section from '@/components/ui/Section.astro';
---

<PageLayout title="UI Component Showcase">
    <!-- Buttons Section -->
    <Section spacing="md" data-testid="buttons-section">
      <h2 class="mb-8 text-2xl font-bold">Buttons</h2>

      <div class="space-y-8">
        <!-- Button Variants -->
        <div>
          <h3 class="mb-4 text-lg font-medium text-muted-foreground">
            Variants
          </h3>
          <div class="flex flex-wrap gap-4">
            <Button variant="primary" data-testid="btn-primary">Primary</Button>
            <Button variant="secondary" data-testid="btn-secondary"
              >Secondary</Button
            >
            <Button variant="ghost" data-testid="btn-ghost">Ghost</Button>
          </div>
        </div>

        <!-- Button Sizes -->
        <div>
          <h3 class="mb-4 text-lg font-medium text-muted-foreground">Sizes</h3>
          <div class="flex flex-wrap items-center gap-4">
            <Button size="sm" data-testid="btn-sm">Small</Button>
            <Button size="md" data-testid="btn-md">Medium</Button>
            <Button size="lg" data-testid="btn-lg">Large</Button>
          </div>
        </div>

        <!-- Button States -->
        <div>
          <h3 class="mb-4 text-lg font-medium text-muted-foreground">States</h3>
          <div class="flex flex-wrap gap-4">
            <Button disabled data-testid="btn-disabled">Disabled</Button>
            <Button href="/features" data-testid="btn-link">As Link</Button>
            <Button fullWidth data-testid="btn-full-width">Full Width</Button>
          </div>
        </div>
      </div>
    </Section>

    <!-- Cards Section -->
    <Section spacing="md" background="muted" data-testid="cards-section">
      <h2 class="mb-8 text-2xl font-bold">Cards</h2>

      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <Card data-testid="card-default">
          <h3 class="mb-2 text-lg font-semibold">Default Card</h3>
          <p class="text-muted-foreground">
            This is a default card with standard padding and border.
          </p>
        </Card>

        <Card variant="elevated" data-testid="card-elevated">
          <h3 class="mb-2 text-lg font-semibold">Elevated Card</h3>
          <p class="text-muted-foreground">
            This card has a shadow for elevation effect.
          </p>
        </Card>

        <Card interactive href="/features" data-testid="card-interactive">
          <h3 class="mb-2 text-lg font-semibold">Interactive Card</h3>
          <p class="text-muted-foreground">
            This card is clickable and has hover effects.
          </p>
        </Card>

        <Card padding="sm" data-testid="card-sm-padding">
          <h3 class="mb-2 text-lg font-semibold">Small Padding</h3>
          <p class="text-muted-foreground">Compact card with less padding.</p>
        </Card>

        <Card padding="lg" data-testid="card-lg-padding">
          <h3 class="mb-2 text-lg font-semibold">Large Padding</h3>
          <p class="text-muted-foreground">Spacious card with more padding.</p>
        </Card>
      </div>
    </Section>

    <!-- Badges Section -->
    <Section spacing="md" data-testid="badges-section">
      <h2 class="mb-8 text-2xl font-bold">Badges</h2>

      <div class="space-y-8">
        <!-- Badge Variants -->
        <div>
          <h3 class="mb-4 text-lg font-medium text-muted-foreground">
            Variants
          </h3>
          <div class="flex flex-wrap gap-3">
            <Badge variant="default" data-testid="badge-default">Default</Badge>
            <Badge variant="secondary" data-testid="badge-secondary"
              >Secondary</Badge
            >
            <Badge variant="success" data-testid="badge-success">Success</Badge>
            <Badge variant="warning" data-testid="badge-warning">Warning</Badge>
            <Badge variant="destructive" data-testid="badge-destructive"
              >Destructive</Badge
            >
          </div>
        </div>

        <!-- Badge Sizes -->
        <div>
          <h3 class="mb-4 text-lg font-medium text-muted-foreground">Sizes</h3>
          <div class="flex flex-wrap items-center gap-3">
            <Badge size="sm" data-testid="badge-sm">Small</Badge>
            <Badge size="md" data-testid="badge-md">Medium</Badge>
          </div>
        </div>
      </div>
    </Section>

    <!-- Container Section -->
    <Section spacing="md" background="muted" data-testid="container-section">
      <h2 class="mb-8 text-2xl font-bold">Container Sizes</h2>

      <div class="space-y-4">
        <div class="rounded-lg bg-accent/10 p-4">
          <Container size="sm" class="bg-accent/20 p-2" data-testid="container-sm">
            <p class="text-center text-sm">Container SM (640px)</p>
          </Container>
        </div>
        <div class="rounded-lg bg-accent/10 p-4">
          <Container size="md" class="bg-accent/20 p-2" data-testid="container-md">
            <p class="text-center text-sm">Container MD (768px)</p>
          </Container>
        </div>
        <div class="rounded-lg bg-accent/10 p-4">
          <Container size="lg" class="bg-accent/20 p-2" data-testid="container-lg">
            <p class="text-center text-sm">Container LG (1024px)</p>
          </Container>
        </div>
        <div class="rounded-lg bg-accent/10 p-4">
          <Container size="xl" class="bg-accent/20 p-2" data-testid="container-xl">
            <p class="text-center text-sm">Container XL (1280px)</p>
          </Container>
        </div>
      </div>
    </Section>

    <!-- Section Backgrounds -->
    <Section spacing="sm" data-testid="section-default">
      <h2 class="mb-4 text-2xl font-bold">Section - Default Background</h2>
      <p class="text-muted-foreground">Default section with standard spacing.</p>
    </Section>

    <Section spacing="sm" background="muted" data-testid="section-muted">
      <h2 class="mb-4 text-2xl font-bold">Section - Muted Background</h2>
      <p class="text-muted-foreground">Muted section for visual separation.</p>
    </Section>

    <Section spacing="sm" background="accent" data-testid="section-accent">
      <h2 class="mb-4 text-2xl font-bold">Section - Accent Background</h2>
      <p>Accent section for emphasis and CTAs.</p>
    </Section>
</PageLayout>
