---

<Layout title="TechSpecs Component Test">
  <main class="min-h-screen">
    <div class="py-12 bg-gray-900 text-center">
      <h1 class="text-3xl font-bold text-white mb-2">TechSpecs Component Tests</h1>
      <p class="text-gray-300">Various configurations of the TechSpecs component</p>
    </div>

    <!-- Test 1: Default configuration with specs grid (3 columns) -->
    <TechSpecs
      client:load
      title="Technical Specifications"
      description="Everything you need to know about the Sources panel capabilities and supported formats."
      icon={icons.document}
      iconColor="violet"
      specs={sourcesSpecs}
      background="white"
      columns={3}
      docsLink="/docs/features/sources"
      docsLinkText="View Sources documentation"
      testId="tech-specs-default"
    />

    <!-- Test 2: 4-column grid with blue theme -->
    <TechSpecs
      client:load
      title="Lab Capabilities"
      description="Powerful AI research tools with LangGraph-powered reasoning."
      icon={icons.server}
      iconColor="blue"
      specs={labSpecs}
      background="gray"
      columns={4}
      docsLink="/docs/features/lab"
      testId="tech-specs-four-col"
    />

    <!-- Test 3: Table view for vendor comparison -->
    <TechSpecs
      client:load
      title="Vendor Support Matrix"
      description="Lattice supports 10+ cloud vendors with pre-built blueprints."
      icon={icons.cloud}
      iconColor="teal"
      tableHeaders={vendorHeaders}
      tableData={vendorData}
      background="white"
      docsLink="/docs/blueprints"
      docsLinkText="Browse all blueprints"
      testId="tech-specs-table"
    />

    <!-- Test 4: 2-column grid, no header icon -->
    <TechSpecs
      client:load
      title="Configuration Options"
      description="Customize Lattice to fit your workflow."
      specs={configSpecs}
      background="gray"
      columns={2}
      testId="tech-specs-two-col"
    />

    <!-- Test 5: Minimal - specs only, no header -->
    <TechSpecs
      client:load
      specs={sourcesSpecs}
      background="white"
      columns={3}
      testId="tech-specs-minimal"
    />

    <!-- Test 6: Table only, minimal header -->
    <TechSpecs
      client:load
      title="Quick Reference"
      tableHeaders={vendorHeaders}
      tableData={vendorData}
      background="gray"
      testId="tech-specs-table-minimal"
    />

    <!-- Test 7: With different icon colors -->
    <TechSpecs
      client:load
      title="Color Variants"
      icon={icons.chip}
      iconColor="amber"
      specs={[
        {
          category: 'Amber Card',
          icon: icons.chip,
          color: 'amber',
          items: ['Item one', 'Item two']
        },
        {
          category: 'Rose Card',
          icon: icons.chip,
          color: 'rose',
          items: ['Item one', 'Item two']
        },
        {
          category: 'Green Card',
          icon: icons.chip,
          color: 'green',
          items: ['Item one', 'Item two']
        }
      ]}
      background="white"
      columns={3}
      testId="tech-specs-colors"
    />
  </main>
</Layout>
