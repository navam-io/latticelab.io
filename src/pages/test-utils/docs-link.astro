---
/**
 * DocsLink Component Test Page
 * This page is used for testing the DocsLink component in production.
 * Route: /test-utils/docs-link
 */
import Layout from '@layouts/Layout.astro';
import DocsLink from '@components/shared/DocsLink.vue';
---

<Layout title="DocsLink Test" description="DocsLink component test page">
  <main class="container-custom py-12">
    <h1 class="text-3xl font-bold mb-8">DocsLink Component Test</h1>

    <!-- Basic Usage -->
    <section class="mb-12" data-testid="basic-usage">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Basic Usage</h2>
      <div class="space-y-4 max-w-xl">
        <div data-testid="basic-title-only">
          <DocsLink
            client:load
            title="Getting Started"
            href="/docs/getting-started"
            testId="basic-link"
          />
        </div>
        <div data-testid="basic-with-description">
          <DocsLink
            client:load
            title="Getting Started Guide"
            description="Learn how to install and configure Lattice for your first project."
            href="/docs/getting-started"
            testId="basic-with-desc"
          />
        </div>
      </div>
    </section>

    <!-- Icon Variants -->
    <section class="mb-12" data-testid="icon-variants">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Icon Variants</h2>
      <div class="space-y-4 max-w-xl">
        <div data-testid="icon-document">
          <DocsLink
            client:load
            title="Documentation"
            description="Browse the full documentation."
            href="/docs"
            icon="document"
            testId="icon-document-link"
          />
        </div>
        <div data-testid="icon-book">
          <DocsLink
            client:load
            title="User Guide"
            description="Comprehensive guide to using Lattice."
            href="/docs/guide"
            icon="book"
            testId="icon-book-link"
          />
        </div>
        <div data-testid="icon-code">
          <DocsLink
            client:load
            title="Code Examples"
            description="Browse code samples and snippets."
            href="/docs/examples"
            icon="code"
            testId="icon-code-link"
          />
        </div>
        <div data-testid="icon-guide">
          <DocsLink
            client:load
            title="Tutorial"
            description="Step-by-step tutorial for beginners."
            href="/docs/tutorial"
            icon="guide"
            testId="icon-guide-link"
          />
        </div>
        <div data-testid="icon-api">
          <DocsLink
            client:load
            title="API Reference"
            description="Complete API documentation."
            href="/docs/api"
            icon="api"
            testId="icon-api-link"
          />
        </div>
      </div>
    </section>

    <!-- Style Variants -->
    <section class="mb-12" data-testid="style-variants">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Style Variants</h2>
      <div class="space-y-4 max-w-xl">
        <div data-testid="variant-default">
          <p class="text-sm text-gray-400 mb-2">Default</p>
          <DocsLink
            client:load
            title="Default Variant"
            description="Gray background with hover effects."
            href="/docs"
            variant="default"
            testId="variant-default-link"
          />
        </div>
        <div data-testid="variant-subtle">
          <p class="text-sm text-gray-400 mb-2">Subtle</p>
          <DocsLink
            client:load
            title="Subtle Variant"
            description="Transparent background, minimal styling."
            href="/docs"
            variant="subtle"
            testId="variant-subtle-link"
          />
        </div>
        <div data-testid="variant-bordered">
          <p class="text-sm text-gray-400 mb-2">Bordered</p>
          <DocsLink
            client:load
            title="Bordered Variant"
            description="White background with border emphasis."
            href="/docs"
            variant="bordered"
            testId="variant-bordered-link"
          />
        </div>
        <div data-testid="variant-filled">
          <p class="text-sm text-gray-400 mb-2">Filled</p>
          <DocsLink
            client:load
            title="Filled Variant"
            description="Violet background for emphasis."
            href="/docs"
            variant="filled"
            testId="variant-filled-link"
          />
        </div>
      </div>
    </section>

    <!-- Size Variants -->
    <section class="mb-12" data-testid="size-variants">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Size Variants</h2>
      <div class="space-y-4 max-w-xl">
        <div data-testid="size-sm">
          <p class="text-sm text-gray-400 mb-2">Small</p>
          <DocsLink
            client:load
            title="Small Size"
            description="Compact for inline use."
            href="/docs"
            size="sm"
            testId="size-sm-link"
          />
        </div>
        <div data-testid="size-md">
          <p class="text-sm text-gray-400 mb-2">Medium (default)</p>
          <DocsLink
            client:load
            title="Medium Size"
            description="Standard size for most use cases."
            href="/docs"
            size="md"
            testId="size-md-link"
          />
        </div>
        <div data-testid="size-lg">
          <p class="text-sm text-gray-400 mb-2">Large</p>
          <DocsLink
            client:load
            title="Large Size"
            description="Prominent callout for important links."
            href="/docs"
            size="lg"
            testId="size-lg-link"
          />
        </div>
      </div>
    </section>

    <!-- External Links -->
    <section class="mb-12" data-testid="external-links">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">External Links</h2>
      <div class="space-y-4 max-w-xl">
        <div data-testid="internal-link">
          <p class="text-sm text-gray-400 mb-2">Internal Link (arrow icon)</p>
          <DocsLink
            client:load
            title="Internal Documentation"
            description="Links within the site show a chevron arrow."
            href="/docs"
            testId="internal-link-test"
          />
        </div>
        <div data-testid="external-link">
          <p class="text-sm text-gray-400 mb-2">External Link (external icon)</p>
          <DocsLink
            client:load
            title="GitHub Repository"
            description="Opens in a new tab with external link icon."
            href="https://github.com/example/repo"
            external
            testId="external-link-test"
          />
        </div>
      </div>
    </section>

    <!-- Real-World Usage Examples -->
    <section class="mb-12" data-testid="real-world-examples">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Real-World Usage Examples</h2>

      <!-- Feature Page Context -->
      <div class="bg-white border border-gray-200 rounded-xl p-6 mb-6" data-testid="example-feature-page">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Sources Feature</h3>
        <p class="text-gray-600 mb-4">Learn more about the Sources feature in our documentation.</p>
        <DocsLink
          client:load
          title="Sources Documentation"
          description="Multi-source ingestion, hybrid search, citation tracking, and more."
          href="/docs/features/sources"
          icon="book"
          variant="bordered"
          testId="feature-page-link"
        />
      </div>

      <!-- Getting Started Section -->
      <div class="bg-gray-50 rounded-xl p-6 mb-6" data-testid="example-getting-started">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Ready to Get Started?</h3>
        <div class="space-y-3">
          <DocsLink
            client:load
            title="Quick Start Guide"
            description="Get up and running in 5 minutes."
            href="/docs/getting-started/quickstart"
            icon="guide"
            testId="quickstart-link"
          />
          <DocsLink
            client:load
            title="Installation"
            description="Step-by-step installation instructions."
            href="/docs/getting-started/installation"
            icon="code"
            testId="installation-link"
          />
        </div>
      </div>

      <!-- API Reference Section -->
      <div class="bg-gradient-to-br from-violet-50 to-blue-50 rounded-xl p-6 mb-6" data-testid="example-api-section">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Developer Resources</h3>
        <div class="grid gap-4 md:grid-cols-2">
          <DocsLink
            client:load
            title="API Reference"
            description="Complete API documentation."
            href="/docs/api"
            icon="api"
            variant="filled"
            testId="api-ref-link"
          />
          <DocsLink
            client:load
            title="Code Examples"
            description="Sample implementations."
            href="/docs/examples"
            icon="code"
            variant="filled"
            testId="examples-link"
          />
        </div>
      </div>

      <!-- In-Content Callout -->
      <div class="prose max-w-none mb-6" data-testid="example-in-content">
        <h3 class="text-lg font-bold text-gray-900 mb-4">In-Content Usage</h3>
        <p class="text-gray-600 mb-4">
          The DocsLink component can be used inline within content to provide contextual links to documentation.
        </p>
        <DocsLink
          client:load
          title="Learn more in the documentation"
          href="/docs/advanced"
          variant="subtle"
          size="sm"
          testId="in-content-link"
        />
      </div>
    </section>

    <!-- Dark Background Test -->
    <section class="mb-12" data-testid="dark-background">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">On Dark Background</h2>
      <div class="bg-gray-900 rounded-xl p-6" data-testid="dark-bg-container">
        <p class="text-gray-400 mb-4 text-sm">Note: Consider using filled variant for better visibility on dark backgrounds.</p>
        <div class="space-y-4 max-w-xl">
          <DocsLink
            client:load
            title="Bordered on Dark"
            description="Bordered variant shows well on dark backgrounds."
            href="/docs"
            variant="bordered"
            testId="dark-bg-bordered"
          />
          <DocsLink
            client:load
            title="Filled on Dark"
            description="Filled variant provides good contrast."
            href="/docs"
            variant="filled"
            testId="dark-bg-filled"
          />
        </div>
      </div>
    </section>

    <!-- Combined Options -->
    <section class="mb-12" data-testid="combined-options">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Combined Options</h2>
      <div class="space-y-4 max-w-xl">
        <div data-testid="combined-all">
          <DocsLink
            client:load
            title="Full Featured Link"
            description="Large, filled, external link with API icon."
            href="https://api.example.com/docs"
            icon="api"
            variant="filled"
            size="lg"
            external
            testId="combined-link"
          />
        </div>
      </div>
    </section>
  </main>
</Layout>
