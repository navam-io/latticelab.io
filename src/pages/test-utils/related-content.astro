---
import Layout from '../../layouts/Layout.astro';
import RelatedContent from '../../components/features/RelatedContent.vue';

// Sample icon path
const bookIcon = 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253';

// Sample journey guides for Sources feature
const sourcesJourneys = [
  {
    title: 'Adding Sources to Your Workspace',
    description: 'Learn how to import PDFs, URLs, and more',
    href: '/blog/journey-add-sources'
  },
  {
    title: 'Browsing Your Knowledge Base',
    description: 'Navigate and search your indexed sources',
    href: '/blog/journey-browse-sources'
  },
  {
    title: 'Viewing Source Details',
    description: 'Inspect chunks, metadata, and citations',
    href: '/blog/journey-view-source'
  }
];

// Sample blog posts
const sourcesBlogPosts = [
  {
    title: 'Understanding Hybrid Search',
    description: 'How Lattice combines semantic and keyword search',
    href: '/blog/hybrid-search-explained'
  },
  {
    title: 'Citation Tracking Best Practices',
    description: 'Get the most out of grounded AI responses',
    href: '/blog/citation-tracking'
  }
];

// Sample documentation links
const sourcesDocs = [
  {
    title: 'Sources API Reference',
    description: 'Complete API documentation for source management',
    href: '/docs/api/sources'
  },
  {
    title: 'Supported Formats',
    description: 'All file types and integrations supported',
    href: '/docs/features/sources'
  }
];

// Lab feature journeys
const labJourneys = [
  {
    title: 'Chat with Your AI Research Agent',
    description: 'Ask questions and get grounded answers',
    href: '/blog/journey-chat-with-ai'
  },
  {
    title: 'Asking About Scenarios',
    description: 'Compare infrastructure options with AI',
    href: '/blog/journey-ask-scenarios'
  }
];

// Lab blog posts
const labBlogPosts = [
  {
    title: 'Inside LangGraph Reasoning',
    description: 'How Lattice uses LangGraph for transparent AI',
    href: '/blog/langgraph-reasoning'
  }
];

// Lab docs
const labDocs = [
  {
    title: 'Lab Feature Guide',
    href: '/docs/features/lab'
  },
  {
    title: 'LangGraph Integration',
    href: '/docs/integrations/langgraph'
  }
];

// Minimal journeys only
const minimalJourneys = [
  {
    title: 'Getting Started',
    href: '/blog/getting-started'
  },
  {
    title: 'First Blueprint',
    href: '/blog/journey-first-blueprint'
  }
];

// Docs only for Studio
const studioDocs = [
  {
    title: 'Artifact Types',
    description: 'Decisions, comparisons, and analyses',
    href: '/docs/features/studio/artifacts'
  },
  {
    title: 'Export Formats',
    description: 'Markdown, PDF, JSON export options',
    href: '/docs/features/studio/export'
  },
  {
    title: 'Version History',
    description: 'Track changes to your artifacts',
    href: '/docs/features/studio/versions'
  }
];
---

<Layout title="RelatedContent Component Test">
  <main class="min-h-screen">
    <div class="py-12 bg-gray-900 text-center">
      <h1 class="text-3xl font-bold text-white mb-2">RelatedContent Component Tests</h1>
      <p class="text-gray-300">Various configurations of the RelatedContent component</p>
    </div>

    <!-- Test 1: Full configuration with all three sections -->
    <RelatedContent
      client:load
      title="Learn More About Sources"
      description="Explore guides, articles, and documentation to get the most out of the Sources panel."
      icon={bookIcon}
      iconColor="violet"
      journeys={sourcesJourneys}
      blogPosts={sourcesBlogPosts}
      docs={sourcesDocs}
      background="white"
      ctaLink="/docs/features/sources"
      ctaText="View Sources documentation"
      testId="related-default"
    />

    <!-- Test 2: Two sections (journeys + docs) with blue theme -->
    <RelatedContent
      client:load
      title="Explore Lab Resources"
      description="Learn how to use the AI research agent effectively."
      icon={bookIcon}
      iconColor="blue"
      journeys={labJourneys}
      blogPosts={labBlogPosts}
      docs={labDocs}
      background="gray"
      columns={3}
      testId="related-lab"
    />

    <!-- Test 3: Journeys only -->
    <RelatedContent
      client:load
      title="Journey Guides"
      journeys={minimalJourneys}
      background="white"
      testId="related-journeys-only"
    />

    <!-- Test 4: Docs only with teal theme -->
    <RelatedContent
      client:load
      title="Studio Documentation"
      description="Everything you need to know about creating and managing artifacts."
      icon={bookIcon}
      iconColor="teal"
      docs={studioDocs}
      background="gray"
      ctaLink="/docs/features/studio"
      testId="related-docs-only"
    />

    <!-- Test 5: Minimal - no header, just journeys -->
    <RelatedContent
      client:load
      journeys={minimalJourneys}
      background="white"
      testId="related-minimal"
    />

    <!-- Test 6: Blog posts only -->
    <RelatedContent
      client:load
      title="Related Articles"
      blogPosts={sourcesBlogPosts}
      background="gray"
      testId="related-blogs-only"
    />

    <!-- Test 7: All sections with custom columns -->
    <RelatedContent
      client:load
      title="All Resources"
      journeys={sourcesJourneys}
      blogPosts={sourcesBlogPosts}
      docs={sourcesDocs}
      background="white"
      columns={3}
      testId="related-three-col"
    />

    <!-- Test 8: Two columns forced -->
    <RelatedContent
      client:load
      title="Featured Resources"
      journeys={sourcesJourneys}
      docs={sourcesDocs}
      background="gray"
      columns={2}
      ctaLink="/resources"
      ctaText="Browse all resources"
      testId="related-two-col"
    />
  </main>
</Layout>
