---
/**
 * Tools Collection test page
 * Tests the tools content collection schema and data
 */
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all tools from the collection
const tools = await getCollection('tools');

// Sort by order
const sortedTools = tools.sort((a, b) => a.data.order - b.data.order);

// Categories for testing
const categories = ['calculator', 'advisor', 'registry', 'framework'];
const toolsByCategory = categories.reduce((acc, cat) => {
  acc[cat] = sortedTools.filter(t => t.data.category === cat);
  return acc;
}, {} as Record<string, typeof sortedTools>);
---

<Layout title="Tools Collection Test - Lattice">
  <main class="container mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8" data-testid="page-title">Tools Collection Test</h1>

    <!-- Collection Stats -->
    <section class="mb-12 p-6 bg-gray-50 rounded-xl" data-testid="collection-stats">
      <h2 class="text-xl font-bold mb-4">Collection Statistics</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="p-4 bg-white rounded-lg" data-testid="stat-total">
          <div class="text-2xl font-bold text-violet-600">{tools.length}</div>
          <div class="text-sm text-gray-600">Total Tools</div>
        </div>
        <div class="p-4 bg-white rounded-lg" data-testid="stat-calculators">
          <div class="text-2xl font-bold text-blue-600">{toolsByCategory.calculator?.length || 0}</div>
          <div class="text-sm text-gray-600">Calculators</div>
        </div>
        <div class="p-4 bg-white rounded-lg" data-testid="stat-advisors">
          <div class="text-2xl font-bold text-amber-600">{toolsByCategory.advisor?.length || 0}</div>
          <div class="text-sm text-gray-600">Advisors</div>
        </div>
        <div class="p-4 bg-white rounded-lg" data-testid="stat-other">
          <div class="text-2xl font-bold text-teal-600">{(toolsByCategory.registry?.length || 0) + (toolsByCategory.framework?.length || 0)}</div>
          <div class="text-sm text-gray-600">Registry/Framework</div>
        </div>
      </div>
    </section>

    <!-- All Tools List -->
    <section class="mb-12" data-testid="tools-list">
      <h2 class="text-xl font-bold mb-4">All Tools ({tools.length})</h2>
      <div class="space-y-4">
        {sortedTools.map((tool, index) => (
          <article
            class="p-6 bg-white border rounded-xl hover:border-violet-300 transition-colors"
            data-testid={`tool-${tool.slug}`}
          >
            <div class="flex items-start gap-4">
              <!-- Icon -->
              <div
                class={`w-12 h-12 rounded-xl flex items-center justify-center flex-shrink-0 ${tool.data.iconBg}`}
                data-testid={`tool-${tool.slug}-icon`}
              >
                <svg class={`w-6 h-6 ${tool.data.iconColor}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={tool.data.icon} />
                </svg>
              </div>

              <!-- Content -->
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <h3 class="text-lg font-bold text-gray-900" data-testid={`tool-${tool.slug}-name`}>
                    {tool.data.name}
                  </h3>
                  {tool.data.category && (
                    <span
                      class="px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-600 rounded-full"
                      data-testid={`tool-${tool.slug}-category`}
                    >
                      {tool.data.category}
                    </span>
                  )}
                  <span
                    class="px-2 py-0.5 text-xs font-medium bg-violet-100 text-violet-600 rounded-full"
                    data-testid={`tool-${tool.slug}-order`}
                  >
                    #{tool.data.order}
                  </span>
                </div>

                <p class="text-gray-600 mb-3" data-testid={`tool-${tool.slug}-description`}>
                  {tool.data.shortDescription || tool.data.description}
                </p>

                <!-- Features -->
                {tool.data.features.length > 0 && (
                  <div class="mb-3" data-testid={`tool-${tool.slug}-features`}>
                    <div class="text-xs font-medium text-gray-500 mb-1">Features ({tool.data.features.length}):</div>
                    <div class="flex flex-wrap gap-1">
                      {tool.data.features.slice(0, 3).map((feature, i) => (
                        <span
                          class="px-2 py-0.5 text-xs bg-gray-50 text-gray-600 rounded"
                          data-testid={`tool-${tool.slug}-feature-${i}`}
                        >
                          {feature}
                        </span>
                      ))}
                      {tool.data.features.length > 3 && (
                        <span class="px-2 py-0.5 text-xs bg-gray-50 text-gray-500 rounded">
                          +{tool.data.features.length - 3} more
                        </span>
                      )}
                    </div>
                  </div>
                )}

                <!-- Links -->
                <div class="flex gap-4 text-sm">
                  {tool.data.journeyLink && (
                    <a
                      href={tool.data.journeyLink}
                      class="text-violet-600 hover:text-violet-700"
                      data-testid={`tool-${tool.slug}-journey-link`}
                    >
                      Journey Post
                    </a>
                  )}
                  {tool.data.docsLink && (
                    <a
                      href={tool.data.docsLink}
                      class="text-blue-600 hover:text-blue-700"
                      data-testid={`tool-${tool.slug}-docs-link`}
                    >
                      Documentation
                    </a>
                  )}
                  <span class="text-gray-400" data-testid={`tool-${tool.slug}-slug`}>
                    Slug: {tool.slug}
                  </span>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Schema Validation Section -->
    <section class="mb-12 p-6 bg-blue-50 rounded-xl" data-testid="schema-validation">
      <h2 class="text-xl font-bold mb-4">Schema Validation</h2>
      <div class="space-y-2">
        {sortedTools.map((tool) => (
          <div
            class="flex items-center gap-2 text-sm"
            data-testid={`validation-${tool.slug}`}
          >
            <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="font-medium">{tool.data.name}</span>
            <span class="text-gray-500">- All required fields present</span>
          </div>
        ))}
      </div>
    </section>

    <!-- Tools by Category -->
    <section data-testid="tools-by-category">
      <h2 class="text-xl font-bold mb-4">Tools by Category</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {categories.map((category) => (
          <div
            class="p-4 bg-white border rounded-xl"
            data-testid={`category-${category}`}
          >
            <h3 class="font-bold text-gray-900 mb-2 capitalize">{category}</h3>
            <ul class="space-y-1">
              {(toolsByCategory[category] || []).map((tool) => (
                <li class="text-sm text-gray-600" data-testid={`category-${category}-tool-${tool.slug}`}>
                  {tool.data.name}
                </li>
              ))}
              {(!toolsByCategory[category] || toolsByCategory[category].length === 0) && (
                <li class="text-sm text-gray-400">No tools in this category</li>
              )}
            </ul>
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>
