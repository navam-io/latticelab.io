---
import Layout from '../../layouts/Layout.astro'
import FeatureGrid from '../../components/home/FeatureGrid.vue'
---

<Layout title="FeatureGrid Component Test">
  <main class="py-8">
    <div class="container mx-auto px-4 mb-16">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">FeatureGrid Component Test</h1>
      <p class="text-gray-600">Testing all FeatureGrid configurations and variants.</p>
    </div>

    <!-- Test 1: Default Configuration -->
    <section class="mb-16">
      <div class="container mx-auto px-4 mb-6">
        <h2 class="text-xl font-semibold text-gray-800">1. Default Configuration</h2>
        <p class="text-sm text-gray-500">Shows header, descriptions, gray background</p>
      </div>
      <FeatureGrid
        client:load
        testId="default-grid"
      />
    </section>

    <!-- Test 2: Without Header -->
    <section class="mb-16">
      <div class="container mx-auto px-4 mb-6">
        <h2 class="text-xl font-semibold text-gray-800">2. Without Header</h2>
        <p class="text-sm text-gray-500">Grid only, no section header</p>
      </div>
      <FeatureGrid
        client:load
        showHeader={false}
        testId="no-header-grid"
      />
    </section>

    <!-- Test 3: Without Descriptions -->
    <section class="mb-16">
      <div class="container mx-auto px-4 mb-6">
        <h2 class="text-xl font-semibold text-gray-800">3. Without Descriptions</h2>
        <p class="text-sm text-gray-500">Cards without description text</p>
      </div>
      <FeatureGrid
        client:load
        showDescriptions={false}
        testId="no-desc-grid"
      />
    </section>

    <!-- Test 4: Custom Title and Description -->
    <section class="mb-16">
      <div class="container mx-auto px-4 mb-6">
        <h2 class="text-xl font-semibold text-gray-800">4. Custom Title and Description</h2>
        <p class="text-sm text-gray-500">Custom section header text</p>
      </div>
      <FeatureGrid
        client:load
        sectionTitle="Explore Our Platform"
        sectionDescription="Discover the tools that power your AI infrastructure decisions."
        testId="custom-header-grid"
      />
    </section>

    <!-- Test 5: White Background -->
    <section class="mb-16">
      <div class="container mx-auto px-4 mb-6">
        <h2 class="text-xl font-semibold text-gray-800">5. White Background</h2>
        <p class="text-sm text-gray-500">Background variant: white</p>
      </div>
      <FeatureGrid
        client:load
        background="white"
        testId="white-bg-grid"
      />
    </section>

    <!-- Test 6: Gradient Background -->
    <section class="mb-16">
      <div class="container mx-auto px-4 mb-6">
        <h2 class="text-xl font-semibold text-gray-800">6. Gradient Background</h2>
        <p class="text-sm text-gray-500">Background variant: gradient</p>
      </div>
      <FeatureGrid
        client:load
        background="gradient"
        testId="gradient-bg-grid"
      />
    </section>

    <!-- Test 7: Minimal Configuration -->
    <section class="mb-16">
      <div class="container mx-auto px-4 mb-6">
        <h2 class="text-xl font-semibold text-gray-800">7. Minimal Configuration</h2>
        <p class="text-sm text-gray-500">No header, no descriptions - grid only</p>
      </div>
      <FeatureGrid
        client:load
        showHeader={false}
        showDescriptions={false}
        testId="minimal-grid"
      />
    </section>

  </main>
</Layout>
