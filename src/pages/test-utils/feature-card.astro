---
/**
 * FeatureCard Component Test Page
 * This page is used for testing the FeatureCard component in production.
 * Route: /test-utils/feature-card
 */
import Layout from '@layouts/Layout.astro';
import FeatureCard from '@components/home/FeatureCard.vue';

// Icon SVGs
const sourcesIcon = `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>`

const labIcon = `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>`

const studioIcon = `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>`

const blueprintsIcon = `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path></svg>`
---

<Layout title="FeatureCard Test">
  <main class="min-h-screen bg-gray-100 py-8">
    <div class="container mx-auto px-4 max-w-6xl">
      <h1 class="text-3xl font-bold text-gray-900 mb-8">FeatureCard Component Test</h1>

      <!-- Test Instructions -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-8">
        <h2 class="font-semibold text-blue-900 mb-2">Testing Instructions</h2>
        <ul class="text-sm text-blue-800 space-y-1">
          <li>Verify card has rounded corners and border</li>
          <li>Test hover effects (shadow, translate, glow)</li>
          <li>Check icon, title, tagline visibility</li>
          <li>Verify screenshot/placeholder display</li>
          <li>Test CTA buttons and links</li>
          <li>Check responsive behavior</li>
        </ul>
      </div>

      <!-- Basic Card -->
      <section class="mb-12 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Basic Card</h2>
        <p class="text-gray-600 mb-4">Simple feature card with title, tagline, and link.</p>

        <div class="max-w-sm">
          <FeatureCard
            client:load
            title="Sources"
            tagline="Your Knowledge, Indexed"
            icon={sourcesIcon}
            href="/features/sources"
            variant="violet"
            testId="basic-card"
          />
        </div>
      </section>

      <!-- Card with Screenshot -->
      <section class="mb-12 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Card with Screenshot</h2>
        <p class="text-gray-600 mb-4">Card with product screenshot.</p>

        <div class="max-w-sm">
          <FeatureCard
            client:load
            title="Lab"
            tagline="Research Agent"
            description="Chat with an AI research agent grounded in your sources."
            icon={labIcon}
            screenshot="/images/journeys/chat-with-ai/chat-with-ai-04.png"
            href="/features/lab"
            variant="blue"
            testId="screenshot-card"
          />
        </div>
      </section>

      <!-- Card with Dual CTAs -->
      <section class="mb-12 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Card with Dual CTAs</h2>
        <p class="text-gray-600 mb-4">Card with both Learn more and primary action buttons.</p>

        <div class="max-w-sm">
          <FeatureCard
            client:load
            title="Studio"
            tagline="Artifacts That Matter"
            description="Turn AI responses into reusable artifacts."
            icon={studioIcon}
            screenshot="/images/journeys/view-artifact/view-artifact-02.png"
            secondaryCTA="Learn more"
            secondaryHref="/features/studio"
            primaryCTA="Try Studio"
            primaryHref="/features/studio#demo"
            variant="teal"
            testId="dual-cta-card"
          />
        </div>
      </section>

      <!-- Card with Badge -->
      <section class="mb-12 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Card with Badge</h2>
        <p class="text-gray-600 mb-4">Card with badge indicator.</p>

        <div class="max-w-sm">
          <FeatureCard
            client:load
            title="Blueprints"
            tagline="36 Vendor Blueprints"
            description="Pre-configured knowledge bundles from top AI vendors."
            icon={blueprintsIcon}
            badge="36 Blueprints"
            screenshot="/images/journeys/browse-blueprints/browse-blueprints-02.png"
            href="/features/blueprints"
            variant="purple"
            testId="badge-card"
          />
        </div>
      </section>

      <!-- Card without Screenshot (Placeholder) -->
      <section class="mb-12 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Card without Screenshot</h2>
        <p class="text-gray-600 mb-4">Card shows placeholder when no screenshot provided.</p>

        <div class="max-w-sm">
          <FeatureCard
            client:load
            title="Settings"
            tagline="Your Control Center"
            icon={sourcesIcon}
            href="/features/settings"
            variant="default"
            testId="placeholder-card"
          />
        </div>
      </section>

      <!-- All Variants -->
      <section class="mb-12 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Color Variants</h2>
        <p class="text-gray-600 mb-4">All available color variants.</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <FeatureCard
            client:load
            title="Violet"
            tagline="Default violet variant"
            icon={sourcesIcon}
            href="#"
            variant="violet"
            testId="variant-violet"
          />
          <FeatureCard
            client:load
            title="Blue"
            tagline="Blue color variant"
            icon={labIcon}
            href="#"
            variant="blue"
            testId="variant-blue"
          />
          <FeatureCard
            client:load
            title="Teal"
            tagline="Teal color variant"
            icon={studioIcon}
            href="#"
            variant="teal"
            testId="variant-teal"
          />
          <FeatureCard
            client:load
            title="Amber"
            tagline="Amber color variant"
            icon={sourcesIcon}
            href="#"
            variant="amber"
            testId="variant-amber"
          />
          <FeatureCard
            client:load
            title="Emerald"
            tagline="Emerald color variant"
            icon={labIcon}
            href="#"
            variant="emerald"
            testId="variant-emerald"
          />
          <FeatureCard
            client:load
            title="Purple"
            tagline="Purple color variant"
            icon={blueprintsIcon}
            href="#"
            variant="purple"
            testId="variant-purple"
          />
        </div>
      </section>

      <!-- 2x2 Grid Layout -->
      <section class="mb-12 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">2x2 Grid Layout (Desktop Preview)</h2>
        <p class="text-gray-600 mb-4">How cards look in a 2x2 grid (like FeatureGrid).</p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <FeatureCard
            client:load
            title="Sources"
            tagline="Your Knowledge, Indexed"
            description="Build a curated knowledge base from PDFs, URLs, and more."
            icon={sourcesIcon}
            screenshot="/images/journeys/view-source/view-source-03.png"
            href="/features/sources"
            variant="violet"
            testId="grid-sources"
          />
          <FeatureCard
            client:load
            title="Lab"
            tagline="Research Agent"
            description="Chat with an AI agent grounded in your sources."
            icon={labIcon}
            screenshot="/images/journeys/chat-with-ai/chat-with-ai-04.png"
            href="/features/lab"
            variant="blue"
            testId="grid-lab"
          />
          <FeatureCard
            client:load
            title="Studio"
            tagline="Artifacts That Matter"
            description="Turn AI responses into reusable artifacts."
            icon={studioIcon}
            screenshot="/images/journeys/view-artifact/view-artifact-02.png"
            href="/features/studio"
            variant="teal"
            testId="grid-studio"
          />
          <FeatureCard
            client:load
            title="Blueprints"
            tagline="36 Vendor Blueprints"
            description="Pre-configured knowledge bundles from top vendors."
            icon={blueprintsIcon}
            badge="36 Blueprints"
            screenshot="/images/journeys/browse-blueprints/browse-blueprints-02.png"
            href="/features/blueprints"
            variant="purple"
            testId="grid-blueprints"
          />
        </div>
      </section>

      <!-- Without Glow Effect -->
      <section class="mb-12 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Without Glow Effect</h2>
        <p class="text-gray-600 mb-4">Card with glow effect disabled.</p>

        <div class="max-w-sm">
          <FeatureCard
            client:load
            title="No Glow"
            tagline="Simple hover effect"
            icon={sourcesIcon}
            href="#"
            showGlow={false}
            testId="no-glow-card"
          />
        </div>
      </section>

    </div>
  </main>
</Layout>
