---
/**
 * Animation Utilities Test Page
 * This page is used for testing animation utilities in production.
 * Route: /test-utils/animations
 */
import Layout from '@layouts/Layout.astro';
---

<Layout title="Animation Test" description="Animation utilities test page">
  <main class="container-custom py-12">
    <h1 class="text-3xl font-bold mb-8">Animation Utilities Test</h1>

    <!-- Transition Utilities -->
    <section class="mb-12" data-testid="transition-utilities">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Transition Utilities</h2>
      <div class="flex flex-wrap gap-4">
        <button class="transition-base px-4 py-2 bg-violet-600 text-white rounded-lg hover:bg-violet-700" data-testid="transition-base">
          Transition Base (200ms)
        </button>
        <button class="transition-fast px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" data-testid="transition-fast">
          Transition Fast (150ms)
        </button>
        <button class="transition-slow px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700" data-testid="transition-slow">
          Transition Slow (300ms)
        </button>
        <button class="transition-opacity px-4 py-2 bg-gray-600 text-white rounded-lg hover:opacity-70" data-testid="transition-opacity">
          Transition Opacity
        </button>
        <button class="transition-transform px-4 py-2 bg-indigo-600 text-white rounded-lg hover:scale-105" data-testid="transition-transform">
          Transition Transform
        </button>
        <button class="transition-colors px-4 py-2 border-2 border-violet-600 text-violet-600 rounded-lg hover:bg-violet-600 hover:text-white" data-testid="transition-colors">
          Transition Colors
        </button>
        <button class="transition-shadow px-4 py-2 bg-white border rounded-lg shadow-sm hover:shadow-lg" data-testid="transition-shadow">
          Transition Shadow
        </button>
      </div>
    </section>

    <!-- Fade Animations -->
    <section class="mb-12" data-testid="fade-animations">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Fade Animations</h2>
      <div class="flex flex-wrap gap-4">
        <div class="animate-fade-in p-4 bg-violet-100 rounded-lg" data-testid="animate-fade-in">
          Fade In
        </div>
        <div class="animate-fade-in-up p-4 bg-blue-100 rounded-lg" data-testid="animate-fade-in-up">
          Fade In Up
        </div>
        <div class="animate-fade-in-down p-4 bg-teal-100 rounded-lg" data-testid="animate-fade-in-down">
          Fade In Down
        </div>
      </div>
    </section>

    <!-- Slide Animations -->
    <section class="mb-12 overflow-hidden" data-testid="slide-animations">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Slide Animations</h2>
      <div class="flex flex-wrap gap-4">
        <div class="animate-slide-in-left p-4 bg-violet-100 rounded-lg" data-testid="animate-slide-in-left">
          Slide In Left
        </div>
        <div class="animate-slide-in-right p-4 bg-blue-100 rounded-lg" data-testid="animate-slide-in-right">
          Slide In Right
        </div>
        <div class="animate-slide-in-up p-4 bg-teal-100 rounded-lg" data-testid="animate-slide-in-up">
          Slide In Up
        </div>
        <div class="animate-slide-in-down p-4 bg-indigo-100 rounded-lg" data-testid="animate-slide-in-down">
          Slide In Down
        </div>
      </div>
    </section>

    <!-- Scale Animations -->
    <section class="mb-12" data-testid="scale-animations">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Scale Animations</h2>
      <div class="flex flex-wrap gap-4">
        <div class="animate-scale-in p-4 bg-violet-100 rounded-lg" data-testid="animate-scale-in">
          Scale In
        </div>
        <div class="hover-scale p-4 bg-blue-100 rounded-lg cursor-pointer" data-testid="hover-scale">
          Hover Scale (1.02)
        </div>
        <div class="hover-scale-lg p-4 bg-teal-100 rounded-lg cursor-pointer" data-testid="hover-scale-lg">
          Hover Scale LG (1.05)
        </div>
      </div>
    </section>

    <!-- Backdrop Blur Effects -->
    <section class="mb-12" data-testid="backdrop-blur">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Backdrop Blur Effects</h2>
      <div class="relative h-64 bg-gradient-to-r from-violet-500 to-blue-500 rounded-lg p-4">
        <img src="https://via.placeholder.com/400x200" alt="Background" class="absolute inset-0 w-full h-full object-cover rounded-lg opacity-50">
        <div class="relative flex flex-wrap gap-4">
          <div class="backdrop-blur-sm p-4 bg-white/30 rounded-lg" data-testid="backdrop-blur-sm">
            Blur SM (4px)
          </div>
          <div class="backdrop-blur-base p-4 bg-white/30 rounded-lg" data-testid="backdrop-blur-base">
            Blur Base (8px)
          </div>
          <div class="backdrop-blur-md p-4 bg-white/30 rounded-lg" data-testid="backdrop-blur-md">
            Blur MD (12px)
          </div>
          <div class="backdrop-blur-lg p-4 bg-white/30 rounded-lg" data-testid="backdrop-blur-lg">
            Blur LG (16px)
          </div>
          <div class="backdrop-blur-xl p-4 bg-white/30 rounded-lg" data-testid="backdrop-blur-xl">
            Blur XL (24px)
          </div>
        </div>
      </div>
    </section>

    <!-- Backdrop Overlay -->
    <section class="mb-12" data-testid="backdrop-overlay-section">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Backdrop Overlays</h2>
      <div class="relative h-32 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-lg">
        <div class="absolute inset-x-0 top-0 h-16 backdrop-overlay flex items-center justify-center text-white" data-testid="backdrop-overlay">
          Dark Overlay
        </div>
        <div class="absolute inset-x-0 bottom-0 h-16 backdrop-overlay-light flex items-center justify-center text-gray-900" data-testid="backdrop-overlay-light">
          Light Overlay
        </div>
      </div>
    </section>

    <!-- Scroll Animations -->
    <section class="mb-12" data-testid="scroll-animations">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Scroll-Triggered Animations</h2>
      <div class="space-y-4">
        <div class="scroll-animate p-4 bg-violet-100 rounded-lg" data-testid="scroll-animate">
          Scroll Animate (translateY)
        </div>
        <div class="scroll-animate-scale p-4 bg-blue-100 rounded-lg" data-testid="scroll-animate-scale">
          Scroll Animate Scale
        </div>
        <div class="flex gap-4">
          <div class="scroll-animate scroll-animate-stagger-1 p-4 bg-gray-100 rounded-lg" data-testid="scroll-animate-stagger-1">
            Stagger 1
          </div>
          <div class="scroll-animate scroll-animate-stagger-2 p-4 bg-gray-100 rounded-lg" data-testid="scroll-animate-stagger-2">
            Stagger 2
          </div>
          <div class="scroll-animate scroll-animate-stagger-3 p-4 bg-gray-100 rounded-lg" data-testid="scroll-animate-stagger-3">
            Stagger 3
          </div>
        </div>
      </div>
    </section>

    <!-- Interactive States -->
    <section class="mb-12" data-testid="interactive-states">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Interactive State Transitions</h2>
      <div class="flex flex-wrap gap-4">
        <div class="card-hover p-6 bg-white border rounded-lg shadow-md cursor-pointer" data-testid="card-hover">
          Card Hover Effect
        </div>
        <button class="btn-hover px-6 py-3 bg-violet-600 text-white rounded-lg" data-testid="btn-hover">
          Button Hover
        </button>
        <a href="#" class="link-underline text-violet-600 font-medium" data-testid="link-underline">
          Link with Underline
        </a>
      </div>
    </section>

    <!-- Menu Animations (Initial States) -->
    <section class="mb-12" data-testid="menu-animations">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Menu Animation States</h2>
      <div class="flex flex-wrap gap-4">
        <div class="dropdown-enter p-4 bg-violet-100 rounded-lg" data-testid="dropdown-enter">
          Dropdown Enter State
        </div>
        <div class="dropdown-enter-active p-4 bg-blue-100 rounded-lg" data-testid="dropdown-enter-active">
          Dropdown Active State
        </div>
      </div>
    </section>

    <!-- Loading Animations -->
    <section class="mb-12" data-testid="loading-animations">
      <h2 class="text-xl font-semibold mb-4 text-gray-500">Loading Animations</h2>
      <div class="flex flex-wrap gap-4">
        <div class="animate-pulse-slow w-24 h-24 bg-gray-300 rounded-lg" data-testid="animate-pulse-slow">
        </div>
        <div class="skeleton-shimmer w-48 h-8 rounded-lg" data-testid="skeleton-shimmer">
        </div>
      </div>
    </section>
  </main>

  <script>
    // Add IntersectionObserver for scroll animations demo
    document.addEventListener('DOMContentLoaded', () => {
      const scrollElements = document.querySelectorAll('.scroll-animate, .scroll-animate-scale');

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('in-view');
          }
        });
      }, { threshold: 0.1 });

      scrollElements.forEach(el => observer.observe(el));
    });
  </script>
</Layout>
