---
/**
 * Chat Preview Demo Page
 *
 * Development page to showcase and test the ChatPreview component.
 * This page is used for testing and demonstration purposes.
 *
 * Feature Slice 25: Chat Preview Component
 */
import PageLayout from '@/layouts/PageLayout.astro';
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';
import { ChatPreview } from '@/components/previews/ChatPreview';
---

<PageLayout
  title="Chat Preview Demo"
  description="Interactive demo of the Lattice Lab chat experience"
  noindex={true}
>
  <Section spacing="lg" background="default">
    <Container size="lg">
      <div class="mx-auto max-w-4xl">
        <h1 class="mb-4 text-3xl font-bold text-foreground" data-testid="chat-preview-demo-title">
          Chat Preview Demo
        </h1>
        <p class="mb-8 text-muted-foreground">
          Interactive demo simulating the Lattice Lab chat experience with typing indicators,
          streaming responses, citations, thinking steps, and artifacts.
        </p>

        <div class="mb-8">
          <ChatPreview client:visible />
        </div>

        <div class="rounded-lg border border-border bg-surface-2 p-6">
          <h2 class="mb-4 text-xl font-semibold text-foreground">Demo Features</h2>
          <ul class="space-y-2 text-sm text-muted-foreground">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Pre-scripted conversation playback
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Typing indicator animation
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Character-by-character streaming
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Expandable citation pills with source details
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Collapsible thinking steps
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Artifact card in sidebar
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Replay button to restart demo
            </li>
          </ul>
        </div>
      </div>
    </Container>
  </Section>
</PageLayout>
