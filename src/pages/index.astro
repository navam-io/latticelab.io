---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.vue';
import HeroSection from '@components/home/HeroSection.vue';
import VendorTicker from '@components/home/VendorTicker.vue';
import VideoSection from '@components/home/VideoSection.vue';
import FeatureGrid from '@components/home/FeatureGrid.vue';
import ToolsCarousel from '@components/home/ToolsCarousel.vue';
import UseCases from '@components/home/UseCases.vue';
import PricingCard from '@components/home/PricingCard.vue';
import CTABanner from '@components/home/CTABanner.vue';
import FAQ from '@components/home/FAQ.vue';
import NewsletterSection from '@components/NewsletterSection.vue';
import Footer from '@components/Footer.vue';
---

<Layout
  title="Lattice - Smart AI System Decisions"
  description="Agentic AI lab assistant for research engineers, platform leads, and CTOs. Make confident AI infrastructure decisions with grounded recommendations and full citations."
  keywords="AI infrastructure, AI research assistant, LLM evaluation, model comparison, AI stack decisions, grounded recommendations, Claude, GPT, Gemini, RAG, embeddings"
  ogImage="/images/og-image.png"
  ogType="website"
>
  <!-- FAQPage Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "What is Lattice?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Lattice is an agentic AI lab assistant that helps research engineers, platform leads, and CTOs make confident AI infrastructure decisions. It automates research synthesis by processing vendor documentation, benchmarks, and pricing data—providing grounded recommendations with full citations back to authoritative sources."
        }
      },
      {
        "@type": "Question",
        "name": "How does Lattice differ from ChatGPT or Claude?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Unlike general-purpose AI assistants, Lattice is purpose-built for AI infrastructure research. It ingests your specific sources (vendor docs, papers, pricing pages), maintains citation chains, and provides recommendations grounded in your curated knowledge base—not generic training data."
        }
      },
      {
        "@type": "Question",
        "name": "What are blueprints?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Blueprints are curated knowledge bundles that package vendor documentation, pre-configured scenarios, and recommended stacks. Lattice includes 36 blueprints from leading vendors like Anthropic, AWS, NVIDIA, GCP, Meta, and Mistral."
        }
      },
      {
        "@type": "Question",
        "name": "What's included in the $99 purchase?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "The one-time $99 purchase includes lifetime access to Lattice: all three panels (Sources, Lab, Studio), 36 curated blueprints, unlimited workspaces, scenario and stack configuration, artifact generation and export, and all future updates."
        }
      }
    ]
  })} />

  <Header client:load />
  <main>
    <!-- Hero Section - Large gradient headline with product screenshot -->
    <HeroSection client:load testId="homepage-hero" />

    <!-- Social Proof - Vendor ticker -->
    <VendorTicker client:load />

    <!-- Product Walkthrough Video -->
    <div id="walkthrough">
      <VideoSection client:load />
    </div>

    <!-- Core Features - 2x2 grid of feature cards -->
    <div id="features">
      <FeatureGrid
        client:load
        sectionTitle="Core Features"
        sectionDescription="Four powerful panels designed to help you make confident AI infrastructure decisions."
        background="gray"
        testId="homepage-features"
      />
    </div>

    <!-- Tools Section - 4x2 Grid -->
    <ToolsCarousel
      client:load
      sectionTitle="Powerful Tools"
      sectionDescription="Eight specialized tools to help you make informed AI infrastructure decisions."
      background="white"
      testId="homepage-tools"
    />

    <!-- Use Cases - Target personas -->
    <UseCases client:load />

    <!-- Pricing Section - Centered card with $99 headline -->
    <div id="pricing">
      <PricingCard
        client:load
        sectionTitle="Simple, One-Time Pricing"
        sectionDescription="Get lifetime access to Lattice with a single purchase. No subscriptions, no recurring fees."
        background="gray"
        testId="homepage-pricing"
      />
    </div>

    <!-- FAQ Section -->
    <FAQ client:load />

    <!-- Newsletter Section -->
    <NewsletterSection client:load />

    <!-- CTA Banner - Full-width gradient call to action -->
    <CTABanner
      client:load
      headline="Start Making Confident Decisions"
      subheadline="Join engineers who trust Lattice for AI infrastructure planning."
      primaryCTA="Get Started"
      primaryHref="/#pricing"
      secondaryCTA="View Documentation"
      secondaryHref="/docs"
      testId="homepage-cta"
    />
  </main>
  <Footer client:load />
</Layout>
