---
/**
 * Documentation Page
 *
 * Quick start guide with system requirements, Docker setup instructions,
 * and links to full documentation in GitHub repository.
 *
 * Feature Slice 21: Documentation Page
 */
import PageLayout from '@/layouts/PageLayout.astro';
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';
import Card from '@/components/ui/Card.astro';
import Button from '@/components/ui/Button.astro';
import CodeBlock from '@/components/ui/CodeBlock.astro';

// Quick start steps
const quickStartSteps = [
  {
    step: 1,
    title: 'Purchase Lattice Lab',
    description: 'Complete your purchase to receive access to the private GitHub repository.',
    icon: 'credit-card',
  },
  {
    step: 2,
    title: 'Accept GitHub Invite',
    description: 'Within 24 hours, you\'ll receive an invitation to the private repository.',
    icon: 'github',
  },
  {
    step: 3,
    title: 'Clone the Repository',
    description: 'Clone the repo to your local machine using the command below.',
    icon: 'download',
  },
  {
    step: 4,
    title: 'Run with Docker',
    description: 'Start Lattice Lab with a single docker-compose command.',
    icon: 'play',
  },
];

// System requirements
const requirements = [
  { name: 'Docker', version: '24.0+', description: 'Container runtime' },
  { name: 'Docker Compose', version: '2.20+', description: 'Multi-container orchestration' },
  { name: 'RAM', version: '8GB+', description: 'Minimum memory' },
  { name: 'Storage', version: '10GB+', description: 'For images and data' },
];

// Documentation links
const docLinks = [
  {
    title: 'Installation Guide',
    description: 'Detailed setup instructions for all platforms',
    href: 'https://github.com/navam-io/lattice-lab#installation',
    icon: 'book',
  },
  {
    title: 'Configuration',
    description: 'Environment variables and settings',
    href: 'https://github.com/navam-io/lattice-lab#configuration',
    icon: 'settings',
  },
  {
    title: 'API Keys Setup',
    description: 'Connect your AI provider accounts',
    href: 'https://github.com/navam-io/lattice-lab#api-keys',
    icon: 'key',
  },
  {
    title: 'Blueprints',
    description: 'Using and creating blueprint bundles',
    href: 'https://github.com/navam-io/lattice-lab#blueprints',
    icon: 'package',
  },
];

