---
/**
 * ReviewSnippet Component
 *
 * Compact review display for above-the-fold social proof.
 * Shows star rating with review count or a brief testimonial quote.
 */

export interface Props {
  rating?: number;
  reviewCount?: number;
  quote?: string;
  source?: string;
}

const {
  rating = 5,
  reviewCount,
  quote = 'Saved us weeks of research',
  source = 'Engineering Lead',
} = Astro.props;

// Generate star display
const fullStars = Math.floor(rating);
const hasHalfStar = rating % 1 >= 0.5;
---

<div class="flex items-center gap-3 text-sm" data-testid="review-snippet">
  <!-- Star Rating -->
  <div class="flex items-center gap-1" data-testid="review-stars" aria-label={`${rating} out of 5 stars`}>
    {
      [...Array(5)].map((_, i) => (
        <svg
          class={`h-4 w-4 ${i < fullStars ? 'text-warning' : i === fullStars && hasHalfStar ? 'text-warning' : 'text-muted'}`}
          fill="currentColor"
          viewBox="0 0 20 20"
          aria-hidden="true"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))
    }
  </div>

  <!-- Quote or Review Count -->
  <div class="flex items-center gap-2 text-muted-foreground">
    {
      reviewCount ? (
        <span data-testid="review-count">
          <span class="font-medium text-foreground">{reviewCount}</span> reviews
        </span>
      ) : (
        <span data-testid="review-quote" class="italic">
          "{quote}" <span class="not-italic">â€” {source}</span>
        </span>
      )
    }
  </div>
</div>
