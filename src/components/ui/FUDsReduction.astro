---
/**
 * FUDsReduction Component
 *
 * Displays fear, uncertainty, doubt reducers below CTA buttons.
 * Per CRO best practices: 40-60% conversion lift from this alone.
 */

export interface FUDItem {
  icon?: 'check' | 'shield' | 'clock' | 'lock';
  text: string;
}

export interface Props {
  items?: FUDItem[];
}

const {
  items = [
    { icon: 'shield', text: '30-day money-back guarantee' },
    { icon: 'clock', text: 'Deploy in under 5 minutes' },
    { icon: 'lock', text: 'No data leaves your machine' },
  ],
} = Astro.props;

const icons = {
  check: 'M5 13l4 4L19 7',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  clock: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  lock: 'M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z',
};
---

<div
  class="flex flex-wrap items-center justify-center gap-x-4 gap-y-2 text-xs text-muted-foreground lg:justify-start"
  data-testid="fuds-reduction"
>
  {
    items.map((item, index) => (
      <div class="flex items-center gap-1.5" data-testid={`fud-item-${index}`}>
        <svg
          class="h-3.5 w-3.5 text-success"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d={icons[item.icon || 'check']}
          />
        </svg>
        <span>{item.text}</span>
      </div>
    ))
  }
</div>
