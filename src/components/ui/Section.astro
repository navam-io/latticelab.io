---
import type { HTMLAttributes } from 'astro/types';
import Container from './Container.astro';

export interface Props extends HTMLAttributes<'section'> {
  spacing?: 'sm' | 'md' | 'lg' | 'xl';
  background?: 'default' | 'muted' | 'accent';
  container?: boolean;
  containerSize?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full';
}

const {
  spacing = 'lg',
  background = 'default',
  container = true,
  containerSize = 'xl',
  class: className,
  ...rest
} = Astro.props;

const spacingStyles = {
  sm: 'py-8 sm:py-12',
  md: 'py-12 sm:py-16',
  lg: 'py-16 sm:py-20',
  xl: 'py-20 sm:py-24',
};

const backgroundStyles = {
  default: 'bg-background',
  muted: 'bg-muted',
  accent: 'bg-accent text-accent-foreground',
};

const classes = [spacingStyles[spacing], backgroundStyles[background], className]
  .filter(Boolean)
  .join(' ');
---

<section class={classes} {...rest}>
  {
    container ? (
      <Container size={containerSize}>
        <slot />
      </Container>
    ) : (
      <slot />
    )
  }
</section>
