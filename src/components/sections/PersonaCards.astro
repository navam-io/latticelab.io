---
/**
 * PersonaCards Section
 *
 * Displays persona-specific value propositions with benefit-driven headlines.
 * CRO: Each card speaks to a specific ICP with outcome-focused messaging.
 */
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';
import Card from '@/components/ui/Card.astro';

interface Persona {
  id: string;
  title: string;
  icon: string;
  headline: string;
  description: string;
}

const personas: Persona[] = [
  {
    id: 'research-engineer',
    title: 'Research Engineer',
    icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
    headline: 'Cut weeks of research to hours',
    description:
      'Stop juggling browser tabs and spreadsheets. Get grounded recommendations with full citations from 36 vendor sources.',
  },
  {
    id: 'platform-lead',
    title: 'Platform Lead',
    icon: 'M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10',
    headline: 'Board-ready artifacts in minutes',
    description:
      'Generate comparison tables, cost analyses, and vendor matrices that stand up to executive scrutiny.',
  },
  {
    id: 'cto',
    title: 'CTO / VP Engineering',
    icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
    headline: 'De-risk AI decisions with evidence',
    description:
      'Every recommendation comes with citations you can verify. No hallucinations, no vendor lock-in, no data leaving your infrastructure.',
  },
];
---

<Section spacing="lg" data-testid="persona-cards-section">
  <Container size="xl">
    <!-- Section Header -->
    <div class="mx-auto max-w-3xl text-center">
      <span
        class="mb-4 inline-block text-sm font-semibold uppercase tracking-wider text-accent"
        data-testid="persona-eyebrow"
      >
        Built For You
      </span>
      <h2
        class="mb-4 text-3xl font-bold tracking-tight text-foreground sm:text-4xl"
        data-testid="persona-headline"
      >
        Whether You're Researching, Building, or Deciding
      </h2>
      <p class="text-lg text-muted-foreground" data-testid="persona-subhead">
        Lattice adapts to your role and delivers the insights you need, in the format you need
        them.
      </p>
    </div>

    <!-- Persona Cards Grid -->
    <div
      class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3"
      data-testid="persona-cards-grid"
    >
      {
        personas.map((persona) => (
          <Card
            interactive
            padding="lg"
            class="flex flex-col"
            data-testid={`persona-card-${persona.id}`}
          >
            {/* Icon */}
            <div
              class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-accent/10"
              data-testid={`persona-icon-${persona.id}`}
            >
              <svg
                class="h-6 w-6 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={persona.icon}
                />
              </svg>
            </div>

            {/* Persona Title */}
            <span
              class="mb-2 text-sm font-medium uppercase tracking-wider text-muted-foreground"
              data-testid={`persona-title-${persona.id}`}
            >
              {persona.title}
            </span>

            {/* Benefit-Driven Headline */}
            <h3
              class="mb-3 text-xl font-semibold text-foreground"
              data-testid={`persona-benefit-${persona.id}`}
            >
              {persona.headline}
            </h3>

            {/* Description */}
            <p
              class="flex-1 text-muted-foreground"
              data-testid={`persona-description-${persona.id}`}
            >
              {persona.description}
            </p>
          </Card>
        ))
      }
    </div>
  </Container>
</Section>
