---
import Section from '@/components/ui/Section.astro';
import Container from '@/components/ui/Container.astro';

interface PainPoint {
  icon: 'clock' | 'search' | 'spreadsheet' | 'confusion';
  title: string;
  description: string;
}

const painPoints: PainPoint[] = [
  {
    icon: 'clock',
    title: 'Weeks of Manual Research',
    description:
      'Gathering pricing pages, model cards, and benchmarks from dozens of AI vendors takes weeks of tedious work.',
  },
  {
    icon: 'search',
    title: 'Scattered Information',
    description:
      'Critical data lives across pricing pages, GitHub repos, research papers, and vendor docs with no single source of truth.',
  },
  {
    icon: 'spreadsheet',
    title: 'Spreadsheet Hell',
    description:
      'Complex comparisons across latency, cost, compliance, and capabilities require endless spreadsheet gymnastics.',
  },
  {
    icon: 'confusion',
    title: 'Stale Recommendations',
    description:
      'AI infrastructure changes daily. Yesterday\'s research is already outdated, and there\'s no audit trail.',
  },
];

const iconPaths = {
  clock: 'M12 6v6l4 2m6-2a10 10 0 11-20 0 10 10 0 0120 0z',
  search:
    'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  spreadsheet:
    'M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z',
  confusion:
    'M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
};
---

<Section spacing="lg" background="muted" data-testid="pain-section">
  <Container size="xl">
    <!-- Section Header -->
    <div class="mx-auto max-w-3xl text-center">
      <span
        class="mb-4 inline-block text-sm font-semibold uppercase tracking-wider text-accent"
        data-testid="pain-eyebrow"
      >
        The Problem
      </span>
      <h2
        class="mb-4 text-3xl font-bold tracking-tight text-foreground sm:text-4xl"
        data-testid="pain-headline"
      >
        The AI Infrastructure Research Problem
      </h2>
      <p
        class="text-lg text-muted-foreground"
        data-testid="pain-subhead"
      >
        Research engineers waste valuable time on manual research instead of building.
        Sound familiar?
      </p>
    </div>

    <!-- Pain Points Grid -->
    <div
      class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-4"
      data-testid="pain-points-grid"
    >
      {
        painPoints.map((point, index) => (
          <div
            class="group relative rounded-xl border border-border bg-background p-6 transition-all hover:border-accent/50 hover:shadow-md"
            data-testid={`pain-point-${index}`}
          >
            {/* Icon */}
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-destructive/10 text-destructive">
              <svg
                class="h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={iconPaths[point.icon]}
                />
              </svg>
            </div>

            {/* Content */}
            <h3 class="mb-2 text-lg font-semibold text-foreground">
              {point.title}
            </h3>
            <p class="text-sm text-muted-foreground leading-relaxed">
              {point.description}
            </p>
          </div>
        ))
      }
    </div>
  </Container>
</Section>
