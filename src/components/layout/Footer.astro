---
import { siteConfig, footerNav } from '@/lib/constants';

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border bg-surface-2" data-testid="footer">
  <div class="mx-auto max-w-screen-xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Brand Column -->
      <div class="space-y-4">
        <a
          href="/"
          class="flex items-center gap-2 text-lg font-semibold text-foreground transition-opacity hover:opacity-80"
          data-testid="footer-logo"
        >
          <img
            src="/logo-icon-40.png"
            alt=""
            class="h-8 w-8"
            width="32"
            height="32"
            aria-hidden="true"
            data-testid="footer-logo-image"
          />
          <span>{siteConfig.name}</span>
        </a>
        <p class="text-sm text-muted-foreground max-w-xs">
          Agentic AI Lab Assistant for Research Engineers. Make confident infrastructure decisions with grounded recommendations.
        </p>
      </div>

      <!-- Links Column -->
      <div>
        <h3 class="text-sm font-semibold text-foreground mb-4">Quick Links</h3>
        <nav aria-label="Footer navigation">
          <ul class="space-y-2">
            {
              footerNav.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class="text-sm text-muted-foreground transition-colors hover:text-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 rounded-sm"
                    {...(item.external
                      ? { target: '_blank', rel: 'noopener noreferrer' }
                      : {})}
                  >
                    {item.label}
                    {item.external && (
                      <svg
                        class="ml-1 inline-block h-3 w-3"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        />
                      </svg>
                    )}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <!-- Contact Column -->
      <div>
        <h3 class="text-sm font-semibold text-foreground mb-4">Connect</h3>
        <ul class="space-y-2">
          <li>
            <a
              href={siteConfig.links.github}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-sm text-muted-foreground transition-colors hover:text-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 rounded-sm"
              data-testid="github-link"
            >
              <svg
                class="h-5 w-5"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                  clip-rule="evenodd"
                />
              </svg>
              GitHub
            </a>
          </li>
          <li>
            <a
              href="mailto:hello@latticelab.io"
              class="inline-flex items-center gap-2 text-sm text-muted-foreground transition-colors hover:text-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 rounded-sm"
              data-testid="email-link"
            >
              <svg
                class="h-5 w-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
              hello@latticelab.io
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-8 pt-8 border-t border-border">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-sm text-muted-foreground">
          &copy; {currentYear} {siteConfig.name}. All rights reserved.
        </p>
        <p class="text-sm text-muted-foreground">
          Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">Astro</a>
        </p>
      </div>
    </div>
  </div>
</footer>
