---
import type { NavItem } from '@/types';

interface Props {
  items: NavItem[];
  class?: string;
}

const { items, class: className } = Astro.props;
---

<nav class:list={['hidden md:flex items-center gap-1', className]} aria-label="Main navigation">
  {
    items.map((item) => (
      <a
        href={item.href}
        class="px-3 py-2 text-sm font-medium text-muted-foreground transition-colors hover:text-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 rounded-md"
        {...(item.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
      >
        {item.label}
        {item.external && (
          <svg
            class="ml-1 inline-block h-3 w-3"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            />
          </svg>
        )}
      </a>
    ))
  }
</nav>
